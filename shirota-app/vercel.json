{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "JWT_SECRET": "@jwt_secret",
    "YOOMONEY_WALLET": "@yoomoney_wallet",
    "NEXTAUTH_URL": "@nextauth_url"
  }
}